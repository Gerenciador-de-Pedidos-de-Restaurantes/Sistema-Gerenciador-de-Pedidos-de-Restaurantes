<html>
<head>
  <style type="text/css">
    .button {
      display: inline-block;
      border-radius: 4px;
      background-color: #f4511e;
      border: none;
      color: #FFFFFF;
      text-align: center;
      font-size: 18px;
      padding: 5px;
      width: 110px;
      transition: all 0.5s;
      cursor: pointer;
      margin: 5px;
    }

    .button span {
      cursor: pointer;
      display: inline-block;
      position: relative;
      transition: 0.5s;
    }

    .button span:after {
      content: '\00bb';
      position: absolute;
      opacity: 0;
      top: 0;
      right: -20px;
      transition: 0.5s;
    }

    .button:hover span {
      padding-right: 25px;
    }

    .button:hover span:after {
      opacity: 1;
      right: 0;
    }

    body{
      background-image:url(https://png.clipart.me/istock/previews/6155/61558146-food-restaurant-logo-icon.jpg);
    }
    form,label {
      display: block;
      padding: 10px;
    }
    form {
      width: 300px;
      margin: 15px;
      background-color: rgba(0, 0, 0, 0.9);
      position: absolute;
      left: 37%;
    }
    label.warning{
      color: red;
      text-align: center;
    }
    h2.warning{
      color: red;
      text-align: left;
    }
    label {
      color: white;
      text-align: center;
    }
    input {
      display: inline-block;
      padding-left: 10px;
    }
    h1.estiloLabel{
      text-align: center;
      font-weight:bold;
      font-style:italic;
      color:white;
    }
  </style>
</head>
<body>
<div>
      <% # formulario de cadastramento%>
      <%= form_with model: @cliente, scope: :cliente, local: true do |form| %>

        <h1 class="estiloLabel">
					Sign Up
				</h1>

        <div>
          <label><%= form.label 'Name' %>
          <%= form.text_field :nome, placeholder:"Name" %></label>
        </div>

        <div>
          <label><%= form.label 'ID'%>
          <%= form.text_field :identificador, placeholder:"ID" %></label>
        </div>

        <div>
          <label><%= form.label 'Telephone'%>
          <%= form.text_field :telefone, placeholder:"Telephone" %></label>
        </div>

        <div>
          <label><%= form.label 'Cellphone' %>
          <%= form.text_field :celular, placeholder:"Cellphone" %></label>
        </div>

        <div>
          <label><%= form.label 'Email'%><br>
          <%= form.text_field :email, placeholder:"E-mail (minim 5 chars)" %></label>
        </div>

        <div>
          <label><%= form.label 'Password'%>
          <%= form.text_field :senha, type:"password", placeholder:"Password (minim5 chars)" %></label>
        </div>

        <% if(ClientesController.getResultadoPositivoCliente != "")
             valor = ""
             resultado = ClientesController.getResultadoPositivoCliente
          if resultado.split('-')[0] == 'erro'
            valor = "color: red"
            resultado = resultado.split('-')[1]
          end
        %>
          <span>
            <%= resultado %>
          </span>
          <%ClientesController.setResultadoPositivoCliente("") %>
        <% end %>

        <br><center>
          <button class="button" style="vertical-align:middle"><%= link_to 'Sign in', logins_index_path%></button>
          <button class="button" style="vertical-align:middle"><span>Add</span></button>
        </center>

        <% if @cliente.errors.any? %>
          <div>
            <h2 class="warning">
              <%= pluralize(@cliente.errors.count, "erros") %>
              antes de criar o cliente:
            </h2>
            <>
              <% @cliente.errors.full_messages.each do |msg| %>
              <center><label class="warning">-<%= msg %></label></center>
              <% end %>
            </ul>
          </div>
        <% end %>

      <% end %>

</div>
</body>
</html>>
