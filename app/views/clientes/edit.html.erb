<body>
<di id="wrap">
  <% # formulario de edicao %>
  <%= form_with model: @cliente, scope: :cliente, local: true do |form| %>

        <span>Editing Profile</span>

    <div>
      <%= form.label :nome, class:"label-elemento_formulario" %><br>
      <%= form.text_field :nome, placeholder:"Name" %>
    </div>

    <div>
      <%= form.label :identificador %><br>
      <%= form.text_field :identificador,placeholder:"ID" %>
    </div>

    <div>
      <%= form.label :telefone%><br>
      <%= form.text_field :telefone, placeholder:"Telephone" %>
    </div>

    <div>
      <%= form.label :celular%><br>
      <%= form.text_field :celular, placeholder:"Cellphone" %>
    </div>

    <div>
      <%= form.label :email%><br>
      <%= form.text_field :email,placeholder:"E-mail (minim de 5 chars)" %>
    </div>

    <div>
      <%= form.label :senha%><br>
      <%= form.text_field :senha, type:"password", placeholder:"Password (minim 5 chars)" %>
    </div>


    <% if(ClientesController.getResultadoPositivoCliente != "")
         valor = ""
         resultado = ClientesController.getResultadoPositivoCliente
         if resultado.split('-')[0] == 'erro'
           valor = "color: red"
           resultado = resultado.split('-')[1]
         end
    %>
          <span>
            <%= resultado %>
          </span>
      <%ClientesController.setResultadoPositivoCliente("") %>
    <% end %>

    <div>
      <button>
						<span>
							Atualizar
						</span>
      </button>
    </div>

    <% if @cliente.errors.any? %>
      <div>
        <h2>
          <%= pluralize(@cliente.errors.count, "erros") %>
          antes de criar o cliente:
        </h2>
        <ul>
          <% @cliente.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <% end %>
  <button ><%= link_to 'Voltar', clientes_perfil_path, id:"d-#{'edit-'+(Pessoa.get_pessoa_logada.id).to_s}"%></button>
</di>
</body>
