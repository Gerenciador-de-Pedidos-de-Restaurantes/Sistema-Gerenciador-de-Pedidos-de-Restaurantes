<head>
  <style type="text/css">
    .button {
      display: inline-block;
      border-radius: 4px;
      background-color: #32CD32;
      border: none;
      color: #FFFFFF;
      text-align: center;
      font-size: 18px;
      padding: 5px;
      width: 100px;
      transition: all 0.5s;
      cursor: pointer;
      margin: 5px;
      text-decoration: none;
    }
    .button {
      background-color: white;
      color: black;
      border: 2px solid #32CD32;
    }
    .button:hover {
      background-color: #32CD32;
      color: white;
    }
    #customers {
      font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
      border-collapse: collapse;
      width: 97%;
    }
    #customers td, #customers th {
      border: 1px solid #ddd;
      padding: 8px;
    }
    #customers tr{background-color: #f2f2f2;}
    #customers tr:hover {background-color: #ddd;}
    #customers th {
      padding-top: 12px;
      padding-bottom: 12px;
      text-align: left;
      background-color: #4CAF50;
      color: white;
    }
  </style>
</head>

<table id="customers">
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @menus.each do |menu| %>
    <tr>
      <td><%= link_to menu.title,  menu_path(menu)%></td>
      <td><%= menu.description %></td>
      <td><%= link_to 'Edit', edit_menu_path(menu), class:'button', style:'vertical-align:middle' %>
      <%= link_to 'Delete', menu_path(menu), method: :delete, class:'button', style:'vertical-align:middle'%></td>
    </tr>
  <% end %>
</table>
