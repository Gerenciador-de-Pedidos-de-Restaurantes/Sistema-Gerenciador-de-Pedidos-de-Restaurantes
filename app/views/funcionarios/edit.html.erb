<body>
<div id="wrap">
  <%= render 'padrao/menu' %>

  <% # formulario de cadastramento ..................................... %>
  <%= form_with model: @funcionario, scope: :funcionario, local: true do |form| %>

        <span>
					Cadastrar Funcionário
				</span>

    <div>
      <%= form.label :nome%><br>
      <%= form.text_field :nome, placeholder:"Digite um nome" %>
    </div>

    <div>
      <%= form.label :cpf%><br>
      <%= form.text_field :identificador, placeholder:"Digite um cpf" %>
    </div>

    <div>
      <%= form.label :telefone %><br>
      <%= form.text_field :telefone, placeholder:"Digite um número de telefone" %>
    </div>

    <div>
      <%= form.label :celular %><br>
      <%= form.text_field :celular, placeholder:"Digite um número de celular" %>
    </div>

    <div>
      <%= form.label :email%><br>
      <%= form.text_field :email, placeholder:"Digite um e-mail (mínimo de 5 carecteres)" %>
    </div>

    <div>
      <%= form.label :senha%><br>
      <%= form.text_field :senha, type:"password", placeholder:"Digite uma senha (mínimo de 5 carecteres)" %>
    </div>


    <div>
      <%= form.label :cargo%><br>
      <%= form.text_field :cargo, placeholder:"Digite o um cargo" %>
    </div>

    <% if(FuncionariosController.getResultadoPositivoFuncionario != "")
         valor = ""
         resultado = FuncionariosController.getResultadoPositivoFuncionario
         if resultado.split('-')[0] == 'erro'
           valor = "color: red"
           resultado = resultado.split('-')[1]
         end
    %>
          <span>
            <%= resultado %>
          </span>
      <%FuncionariosController.setResultadoPositivoFuncionario("") %>
    <% end %>

    <div>
      <button>
						<span>
							Adicionar
						</span>
      </button>
    </div>
    </div>
  <% end %>
  <button ><%= link_to 'Voltar', funcionarios_perfil_path, id:"d-#{'edit-'+(Pessoa.get_pessoa_logada.id).to_s}"%></button>
  </div>
  </body>
